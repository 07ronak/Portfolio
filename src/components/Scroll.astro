<style>
  .company {
    background-image: linear-gradient(214deg, #ff285c, #b010fb);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .profile-image {
    width: 100%;
    max-width: 30rem;
    height: auto;
    clip-path: circle();
  }
  .sticky-wrapper {
    height: 100vh; /* Adjust this value to control where the stickiness ends */
  }
  .sticky-image {
    position: sticky;
    top: 2rem; /* Adjust this value to set the distance from the top of the viewport */
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const stickyWrapper = document.querySelector(".sticky-wrapper");
    const stickyImage = document.querySelector(".sticky-image") as HTMLElement;
    const aboutSection = document.getElementById("about");

    if (stickyWrapper && stickyImage && aboutSection) {
      const observer = new IntersectionObserver(
        ([e]) => {
          if (e.isIntersecting) {
            stickyImage.style.position = "static";
          } else {
            stickyImage.style.position = "sticky";
          }
        },
        { threshold: [1] },
      );

      observer.observe(aboutSection);
    }
  });
</script>
