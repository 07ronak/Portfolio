    }
    #image-container {
      transition: transform 0.3s ease-out;
    }
  </style>

  <script>
    document.addEventListener("astro:page-load", () => {
      const imageContainer = document.getElementById(
        "image-container",
      ) as HTMLElement;
      const aboutSection = document.getElementById("about");
      const stopPoint = 100; // Adjust this value to control how far into the About section the image scrolls

      if (imageContainer && aboutSection) {
        const initialTop = imageContainer.offsetTop;

        window.addEventListener("scroll", () => {
          const aboutRect = aboutSection.getBoundingClientRect();
          const scrollY = window.scrollY;

          if (aboutRect.top <= stopPoint) {
            // Stop the image at the desired point within the About section
            imageContainer.style.transform = `translateY(${aboutRect.top - stopPoint}px)`;
          } else if (scrollY > initialTop) {
            // Move the image with the scroll
            imageContainer.style.transform = `translateY(${scrollY - initialTop}px)`;
          } else {
            // Reset to initial position
            imageContainer.style.transform = "translateY(0)";
          }
        });
      }
    });
  </script>
