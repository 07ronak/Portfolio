---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
---

<Layout>
  <Main>
    <hr />
    <div class="space-y-8 mt-40 mx-14">
      <div class="font-sans text-[22px] leading-[30px] font-bold text-black">
        Ronak Hingonia, <br />
        full stack developer at <a href="#">
          <span class="company">. . . :)</span>
        </a>
      </div>
      <div class="space-x-3">
        <a
          href="#"
          class="font-sans text-lg text-black text-opacity-70 opacity-70"
          >Email</a
        >
        <a
          href="#"
          class="font-sans text-lg text-black text-opacity-70 opacity-70"
          >Github</a
        >
        <a
          href="#"
          class="font-sans text-lg text-black text-opacity-70 opacity-70"
          >Linkedin</a
        >
        <a
          href="#"
          class="font-sans text-lg text-black text-opacity-70 opacity-70"
          >Twitter</a
        >
      </div>
    </div>
  </Main>

  <style>
    .company {
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
      background-image: linear-gradient(214deg, #ff285c, #b010fb);
      /* background-image: linear-gradient(214deg, #5bd600, #75f01a); */
      font-size: 22px;
    }
  </style>
</Layout>
